<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="10dp"
    android:textAlignment="center"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.e.usersdata.ui.activity.MainActivity">

    <!-- Get By ID -->
    <LinearLayout
        android:id="@+id/linear_scrollView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <!-- Get All -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="20dp"
            android:background="@color/colorPrimary"
            android:gravity="center"
            android:padding="3dp"
            android:text="Display List Of each item below"
            android:textAllCaps="true"
            android:textColor="#fff"
            android:textSize="15sp" />

        <include
            layout="@layout/get_all_placeholder"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <!-- Get By Id -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:background="@color/colorPrimary"
            android:gravity="center"
            android:padding="3dp"
            android:text="Just Display List Of each ID item below"
            android:textAllCaps="true"
            android:textColor="#fff"
            android:textSize="15sp" />

        <include
            layout="@layout/get_byid_placeholder"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="30dp" />
    </LinearLayout>
</androidx.core.widget.NestedScrollView>


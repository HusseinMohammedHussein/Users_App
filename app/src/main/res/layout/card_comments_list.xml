<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/comment_card"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="20dp"
    app:cardBackgroundColor="@color/card_color"
    app:cardCornerRadius="10dp"
    app:cardElevation="10dp">

<!--    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">-->

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/tv_comments_postId"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:layout_margin="10dp"
                android:gravity="start"
                android:textColor="@color/text_color_black"
                android:textSize="17sp"
                tools:text="comments_postId" />

            <TextView
                android:id="@+id/tv_comments_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_margin="10dp"
                android:gravity="start"
                android:textColor="@color/text_color_black"
                android:textSize="17sp"
                tools:text="comments_Id" />

            <TextView
                android:id="@+id/tv_comments_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_comments_postId"
                android:layout_gravity="start"
                android:layout_margin="10dp"
                android:gravity="start"
                android:textColor="@color/text_color_black"
                android:textSize="17sp"
                tools:text="comments_name" />

            <TextView
                android:id="@+id/tv_comments_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_comments_name"
                android:layout_gravity="start"
                android:layout_margin="10dp"
                android:gravity="start"
                android:textColor="@color/text_color_black"
                android:textSize="17sp"
                tools:text="comments_email" />

            <TextView
                android:id="@+id/tv_comments_body"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_comments_email"
                android:layout_gravity="start"
                android:layout_margin="10dp"
                android:gravity="start"
                android:textColor="@color/text_color_black"
                android:textSize="17sp"
                tools:text="comments_body" />
        </RelativeLayout>

    <!--</LinearLayout>-->

</androidx.cardview.widget.CardView>